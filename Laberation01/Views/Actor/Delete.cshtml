@model Actor
@{
    ViewData["Title"] = "Delete Actor";
}

<div class="card shadow border">
    <div class="card-header bg-danger bg-gradient ml-0 py-4">
        <div class="col-12 text-center">
            <h2 class="card-title text-white">Delete Actor</h2>
        </div>
    </div>
    <div class="card-body">
        <h4>Are you sure you want to delete this actor?</h4>

        <div class="form-group mb-3">
            <label>Name:</label>
            <p>@Model.Name</p>
        </div>

        <!-- Current image preview section -->
        <div class="form-group mb-3">
            @if (Model.Preview != null)
            {
                <img src="@Model.Preview" id="currentImagePreview" style="max-width: 100%; max-height: 400px;" />
            }
            else if (!string.IsNullOrEmpty(Model.PreviewUrl))
            {
                <img src="@Model.PreviewUrl" id="currentImagePreview" style="max-width: 100%; max-height: 400px;" />
            }
            else
            {
                <p>No image available.</p>
            }
        </div>

        <div class="col-12">
            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="w-100 btn btn-lg btn-outline-danger">Delete</button>
                <a asp-action="Index" class="w-100 btn btn-lg btn-secondary mt-2">Cancel</a>
            </form>
        </div>
    </div>
</div>
