@model MovieViewModel
@{
    ViewData["Title"] = "Delete Movie";
}

<div class="card shadow border">
    <div class="card-header bg-danger bg-gradient ml-0 py-4">
        <div class="col-12 text-center">
            <h2 class="card-title text-white">Delete Movie</h2>
        </div>
    </div>
    <div class="card-body">
        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="Movie.Id" />

            <div class="form-group mb-3">
                <label asp-for="Movie.Title" class="control-label"></label>
                <input asp-for="Movie.Title" class="form-control" readonly />
            </div>

            <div class="form-group mb-3">
                <label asp-for="Movie.Description" class="control-label"></label>
                <textarea asp-for="Movie.Description" class="form-control" readonly></textarea>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Movie.ReleaseDate" class="control-label"></label>
                <input asp-for="Movie.ReleaseDate" type="date" class="form-control" readonly />
            </div>

            <div class="form-group mb-3">
                <label asp-for="Movie.RunningTime" class="control-label"></label>
                <input asp-for="Movie.RunningTime" type="time" class="form-control" readonly />
            </div>

            @if (!string.IsNullOrEmpty(Model.Movie.PreviewUrl))
            {
                <div class="form-group mb-3">
                    <label class="control-label">Preview</label><br />
                    <video src="@Model.Movie.PreviewUrl" controls style="width: 100%; max-height: 400px;"></video>
                </div>
            }

            <div class="form-group mb-3">
                <label asp-for="SelectedActorIds" class="control-label">Actors</label>
                <select asp-for="SelectedActorIds" class="form-control" asp-items="Model.Actors" disabled multiple></select>
            </div>

            <div class="col-12">
                <button type="submit" class="w-100 btn btn-lg btn-outline-danger">Delete</button>
                <a asp-action="Index" class="w-100 btn btn-lg btn-secondary mt-2">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
